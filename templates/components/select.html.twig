{# select.html.twig #}
<div class="field">
  {% if label is defined %}
    <label class="label">{{ label }}</label>
  {% endif %}
  <div class="control">
    <div class="select {{ size|default('') }}">
      <select name="{{ name|default('') }}">
        {% for option in options %}
          <option value="{{ option.value }}" {{ option.value == selected ? 'selected' : '' }}>{{ option.label }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
</div>

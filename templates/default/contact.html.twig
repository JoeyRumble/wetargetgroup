{% extends 'base.html.twig' %}

{% block body %}
  <header class="relative text-white lg:h-[440px] md:h-[340px] h-[300px] w-full bg-cover" style="background-image: url('{{ asset('images/assets/bg_wetarget_gradient.jpg') }}');">
    <div class="max-w-[1000px] mx-auto px-4 h-full flex items-center justify-center relative z-10 pt-30">
      <h1 class="xl:text-[83px] lg:text-7xl md:text-6xl text-5xl text-center text-secondary leading-[1] font-extrabold md:font-black relative text-stroke-width-3 tracking-[-4px] mb-10 paint-order-stroke-fill text-stroke-white delay-[300ms] duration-[600ms] taos:scale-[0.6] taos:opacity-0" data-taos-offset="100">Samen schieten op goede ideeÃ«n</h1>
    </div>
    <div class="absolute w-full overflow-hidden -bottom-[1px] h-[870px] pointer-events-none">
      <svg class="absolute w-[3840px] h-[870px] bottom-0 left-1/2 -translate-x-1/2" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 3840 870">
        <g>
          <path style="fill: #fff;stroke:none;" d="M3291,1.2c-1.8,62.4-10.4,124.4-25.8,186.1-39.2,155.1-115.1,290.9-227.5,407.4-112.2,116.6-244.6,196.9-397.2,240.9-152.3,43.2-307.6,45.7-465.9,7.6L0,301.8v568.2h3840V1.2h-549Z"/>
        </g>
      </svg>
    </div>
  </header>

  <section class="w-full md:py-20 py-10 md:mb-0 mb-20 relative z-[60] delay-[300ms] duration-[600ms] taos:scale-[0.6] taos:opacity-0" data-taos-offset="100">
    <div class="max-w-[1180px] mx-auto px-4 w-full">
      <div class="grid md:grid-cols-2 md:space-x-10 md:mb-16 mb-10 md:text-xl text-lg leading-[1.8]">
        <div class="mb-10">
          <p class="text-black font-medium">Kun je geen genoeg van krijgen van ons enthousiastme voor mensen en werk? Kletsen we toch gewoon verder! Vul het contactformulier in en dan nemen wij contact met je op. Of bel als je direct actie wilt!</p>
        </div>

        <div class="grid lg:grid-cols-2 md:space-10 text-body">
          <p class="mb-10">
            <strong class="text-black font-medium">WeTarget</strong><br />
            Slotenmakerstraat 60<br />
            2672GD Naaldwijk
          </p>

          <p>
            Tel: <a href="tel:0174257221" class="hover:underline">0174 257 221</a><br />
            Mail: <a href="mailto:info@wetarget.nl" class="hover:underline">info@wetarget.nl</a><br />
            KVK: 87780917<br />
            BTW nr: NL864437006B01
          </p>
        </div>
      </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-[600px] mx-auto mt-6">
                    <div class="rounded px-4 py-3 mb-4 {{ label == 'success' ? 'bg-green-100 text-green-800 border border-green-300' : 'bg-red-100 text-red-800 border border-red-300' }}">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

      {## Contact form section #}
      {% set isProd = app.environment == 'prod' %}
      <form method="post" action="{{ path('contact_form_submit') }}" class="max-w-[600px] mx-auto flex flex-col gap-6" id="contact-form">

        <div>
          <input type="text" id="name" name="name" required placeholder="Naam" class="w-full border bg-white border-black rounded-3xl px-4 py-2 transition-colors duration-200 hover:border-primary focus:outline-none focus:border-primary placeholder:text-[#9685b3]" />
        </div>
        <div>
          <input type="tel" id="telephone" name="telephone" required placeholder="Telefoonnummer" class="w-full border bg-white border-black rounded-3xl px-4 py-2 transition-colors duration-200 hover:border-primary focus:outline-none focus:border-primary placeholder:text-[#9685b3]" />
        </div>
        <div>
          <input type="email" id="email" name="email" required placeholder="E-mailadres" class="w-full border bg-white border-black rounded-3xl px-4 py-2 transition-colors duration-200 hover:border-primary focus:outline-none focus:border-primary placeholder:text-[#9685b3]" />
        </div>
        <div>
          <textarea id="comment" name="comment" rows="4" placeholder="Jouw bericht aan ons (niet verplicht hoor!)" class="w-full border bg-white border-black rounded-3xl px-4 py-2 transition-colors duration-200 hover:border-primary focus:outline-none focus:border-primary placeholder:text-[#9685b3]"></textarea>
        </div>
        <div class="flex justify-center">
          {% if isProd %}
            <button class="g-recaptcha button is-primary is-small cursor-pointer"
                    data-sitekey="{{ app.request.server.get('GOOGLE_RECAPTCHA_PUBLIC_KEY') }}"
                    data-callback="onSubmit"
                    data-size="invisible"
                    type="submit">
              <span class="button-icon">
                {{ source('@public_path'~asset('icons/play_icon.svg')) }}
              </span>
              <span>Sturen maar!</span>
            </button>
          {% else %}
            <button type="submit" class="button is-primary is-small cursor-pointer">
              <span class="button-icon">
                {{ source('@public_path'~asset('icons/play_icon.svg')) }}
              </span>
              <span>Sturen maar!</span>
            </button>
          {% endif %}
        </div>
      </form>
      {% if isProd %}
      <script src="https://www.google.com/recaptcha/api.js" async defer></script>
      <script>
        function onSubmit(token) {
          document.getElementById('contact-form').submit();
        }
      </script>
      {% endif %}
    </div>
  </section>

  <section class="w-full md:flex hidden">
    <div class="max-w-[1180px] mx-auto px-4">
      {# Additional content section #}
      <div class="grid xl:grid-cols-2 grid-cols-[30%_70%] items-right h-[400px]">
        <div class="relative">
          <img src="{{ asset('images/assets/play_triangle.svg') }}" alt="" class="absolute right-30 -top-10 -rotate-45 origin-center w-full z-1" />
        </div>
      </div>
    </div>
  </section>
{% endblock %}
